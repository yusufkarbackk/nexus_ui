# ============================================
# Nexus Next.js UI - Production Environment
# ============================================
# Copy this file to .env.production and fill in your values

# API URL - inside Docker network, use container name
# For external access, use your server's IP/domain
NEXT_PUBLIC_API_URL=http://nexus-api:8080

# Database URL for Prisma (MySQL on storage server)
DATABASE_URL="mysql://nexus:YOUR_PASSWORD@STORAGE_SERVER_IP:3306/nexus_db"
